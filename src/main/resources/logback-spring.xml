<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- Console Appender - logs no console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern
            >%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- GELF Appender - envia logs para o Graylog -->
    <appender
        name="GELF"
        class="biz.paluch.logging.gelf.logback.GelfLogbackAppender"
    >
        <host>udp:localhost</host>
        <port>12201</port>
        <version>1.1</version>
        <facility>rairai-api</facility>
        <extractStackTrace>true</extractStackTrace>
        <filterStackTrace>true</filterStackTrace>
        <mdcProfiling>true</mdcProfiling>
        <timestampPattern>yyyy-MM-dd HH:mm:ss,SSS</timestampPattern>
        <maximumMessageSize>8192</maximumMessageSize>

        <!-- Campos adicionais personalizados -->
        <additionalFields
        >environment=development,application=rairai-api</additionalFields>

        <!-- Inclui campos completos do log -->
        <includeFullMdc>true</includeFullMdc>
    </appender>

    <!-- Root logger - define o nível de log padrão -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="GELF" />
    </root>

    <!-- Você pode definir níveis específicos para pacotes -->
    <logger name="com.rairai" level="DEBUG" />
    <logger name="org.springframework.web" level="INFO" />
    <logger name="org.hibernate" level="INFO" />
</configuration>
